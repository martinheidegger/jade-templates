- scope = arguments[0]
- if (!getLocale) { getLocale = function () { return lang || "en"; } }
- if (!__) { __ = function (key) { return (keys ? keys[key] : false) || scope[key] || ("?" + key + "?"); } }
- if (!getLocaleUrl) { getLocaleUrl = function (lang, slug) { return "/" + (lang || "") + slug; } }
- if (!locales) locales = []
block prepare
doctype html
html(lang=getLocale())
    if !site_title
        - var site_title = __('title')
    if site_name
        - site_title += " | " + site_name
    head
        meta(charset="utf-8")
        title=site_title
        block viewport
            meta(name="viewport", content="width=320, user-scalable=no")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1")

        include header/seo
        if favicon
            link(rel="icon", href=favicon, type="image/x-icon")
            link(rel="shortcut icon", href=favicon, type="image/x-icon")
        include header/facebook
        include header/locales

        block header_styles
            link(href="/css/index.css", rel="stylesheet")

        block header_scripts

        block header_ext
    body
        block content
        block scripts
            script(src="/js/index.js")
        if googleAnalytics
            script.
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

                       ga('create', '#{googleAnalytics.account}', '#{domain}');
                ga('send', 'pageview');